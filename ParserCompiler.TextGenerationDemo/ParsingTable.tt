<#@ template debug="false" hostspecific="true" language="C#" #>
<#@ output extension=".txt" #>
<#@ assembly name="System.Core" #>
<#@ assembly name="EnvDte" #>
<#@ import namespace="System.IO" #>
<#@ assembly name="$(TargetDir)\ParserCompiler.dll" #>
<#@ import namespace="ParserCompiler" #>
<#@ import namespace="ParserCompiler.Models" #>
<#@ import namespace="ParserCompiler.Models.Rules" #>
<#@ import namespace="System.Linq" #>
<#
	WriteLine($"Generated on {DateTime.UtcNow:dd-MMM-yyyy HH:mm:ss} UTC");
	WriteLine(string.Empty);

	var visualStudio = (this.Host as IServiceProvider).GetService(typeof(EnvDTE.DTE)) as EnvDTE.DTE;
	string filePath = visualStudio.Solution.FindProjectItem("Grammar.txt").FileNames[0];

	var grammar = new GrammarLoader().From(filePath).ToGrammar();
	WriteLine(grammar.ToString());

	var parser = grammar.BuildParser();
	WriteLine(string.Empty);
	WriteLine(parser.FirstSets.ToString(set => grammar.SortOrderFor(set.Key)));

	WriteLine(string.Empty);
	WriteLine(parser.FollowSets.ToString(set => grammar.SortOrderFor(set.Key)));

	WriteLine(string.Empty);
	WriteLine(parser.States.ToString());
#>